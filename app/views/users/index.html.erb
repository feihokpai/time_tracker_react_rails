<h1>Users</h1>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <th>Name</th>
    <th>Email</th>
    <th>Admin?</th>
    <th></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin? ? "Yes" : "No" %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
